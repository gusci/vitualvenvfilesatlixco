    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask (no debugger mode)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "dowpalletcontrol.py",
                "FLASK_RUN_PORT": "9000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask (development mode)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "dowpalletcontrol.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_RUN_PORT": "9000"
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}